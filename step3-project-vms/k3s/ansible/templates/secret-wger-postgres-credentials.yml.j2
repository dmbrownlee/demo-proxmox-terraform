---
apiVersion: v1
kind: Secret
metadata:
{% if item == "wger" %}
  name: wger-postgres
{% else %}
  name: wger-postgres-user
{% endif %}
  namespace: "{{ item }}"
type: kubernetes.io/basic-auth
stringData:
{% if item == "wger" %}
  POSTGRES_DB: "{{ wger_db_name }}"
  USERDB_USER: "{{ wger_db_username }}"
  USERDB_PASSWORD: "{{ wger_db_password }}"
{% endif %}
  DB_DATABASE_NAME: "{{ wger_db_name }}"
  DB_USERNAME: "{{ wger_db_username }}"
  DB_PASSWORD: "{{ wger_db_password }}"
  username: "{{ wger_db_username }}"
  password: "{{ wger_db_password }}"
