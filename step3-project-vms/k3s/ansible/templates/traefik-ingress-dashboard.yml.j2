---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: traefik-dashboard
  namespace: kube-system
spec:
  ingressClassName: traefik
  rules:
  - host: "{{ k3s_vip_hostname }}-{{ cnames.traefik }}"
    http:
      paths:
      - backend:
          service:
            name: traefik
            port:
              number: 9000
        path: /
        pathType: Prefix
{% if add_ingress_for_dev_cnames %}
  - host: "dev-{{ cnames.traefik }}"
    http:
      paths:
      - backend:
          service:
            name: traefik
            port:
              number: 9000
        path: /
        pathType: Prefix
{% endif %}
{% if add_ingress_for_live_cnames %}
  - host: "{{ cnames.traefik }}"
    http:
      paths:
      - backend:
          service:
            name: traefik
            port:
              number: 9000
        path: /
        pathType: Prefix
{% endif %}
