---
apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: firefly
  namespace: firefly
spec:
  imageName: ghcr.io/cloudnative-pg/postgresql:17-standard-bookworm
  instances: 1
  enableSuperuserAccess: true

  # affinity:
  #   nodeSelector:
  #     label: node.kubernetes.io/cnpg=cnpg
  #   podAntiAffinityType: preferred
  #   tolerations:
  #     - effect: NoSchedule
  #       key: reservation
  #       operator: Equal
  #       value: database

  managed:
    roles:
      - name: "{{ firefly_db_username }}"
        superuser: true
        login: true
        passwordSecret:
          name: firefly-postgres-user
  bootstrap:
{% if firefly_recover_db_from_backup %}
    recovery:
      database: "{{ firefly_db_name }}"
      owner: "{{ firefly_db_username }}"
      secret:
        name: firefly-postgres-user
      source: dbRecoverySource

  externalClusters:
    - name: dbRecoverySource
      plugin:
        name: barman-cloud.cloudnative-pg.io
        parameters:
          barmanObjectName: firefly-recovery
{% else %}
    initdb:
      database: "{{ firefly_db_name }}"
      owner: "{{ firefly_db_username }}"
      secret:
        name: firefly-postgres-user
{% endif %}

  plugins:
    - name: barman-cloud.cloudnative-pg.io
      isWALArchiver: true
      parameters:
        barmanObjectName: firefly-backups
  storage:
    size: "{{ firefly_db_size }}"
